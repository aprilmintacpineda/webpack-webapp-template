{
  "name": "webpack-webapp-template",
  "version": "1.0.0",
  "description": "A template that I use when creating a web app project.",
  "main": "build/server.js",
  "scripts": {
    "reinstallNodeModules": "rm -rf node_modules package-lock.json && npm i",
    "test": "echo \"Error: no test specified\" && exit 1",
    "nodemon": "nodemon build/server.js",
    "filesizes": "node webpack/filesizes.js",
    "eslint": "eslint \"resources/**/*.js\" --fix",
    "prettier": "prettier \"src-server/**/*.js\" \"resources/**/*.{js,scss}\" --write",
    "lint": "npm run prettier && npm run eslint",
    "build": "rm -rf build && npm run webpack && npm run babel",
    "webpack-watch": "webpack --config webpack/dev.js --watch",
    "webpack": "node ./node_modules/webpack/bin/webpack.js --config webpack/build.js",
    "babel-watch": "babel src-server --out-dir build --watch",
    "babel": "node ./node_modules/@babel/cli/bin/babel.js src-server --out-dir build"
  },
  "author": "April Mintac Pineda",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.3",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "fluxible-js": "^4.2.2",
    "helmet": "^3.15.0",
    "inferno": "^7.0.4",
    "inferno-async-component": "^1.1.5",
    "inferno-create-element": "^7.0.4",
    "inferno-fluxible": "^3.1.8",
    "inferno-router": "^7.0.4",
    "localforage": "^1.7.3",
    "normalize.css": "^8.0.1",
    "redefine-statics-js": "^2.0.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-syntax-jsx": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-flow": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-inferno": "^6.0.4",
    "babel-preset-minify": "^0.5.0",
    "chalk": "^2.4.1",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^2.0.2",
    "eslint": "^5.11.0",
    "eslint-plugin-inferno": "^7.11.0",
    "file-loader": "^3.0.1",
    "gzip-size": "^5.0.0",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.11.1",
    "inline-chunks-html-webpack-plugin": "^1.3.1",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.5.0",
    "prettier": "^1.15.3",
    "prettier-stylelint": "^0.4.2",
    "sass-loader": "7.1.0",
    "script-ext-html-webpack-plugin": "^2.1.3",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.2.0",
    "webpack": "^4.28.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.13",
    "webpack-loader-clean-pragma": "^1.0.2",
    "workbox-webpack-plugin": "^3.6.3",
    "worker-loader": "^2.0.0"
  }
}
